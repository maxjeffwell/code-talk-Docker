# Docker Compose Environment Variables for code-talk
# Copy this file to .env and update with your values

# Node Environment
NODE_ENV=development

# PostgreSQL Configuration
POSTGRES_DB=code_talk_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_postgres_password

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password

# JWT Secrets (MUST be changed in production! Use 32+ characters)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_very_long_and_secure_jwt_secret_key_at_least_32_characters
JWT_REFRESH_SECRET=your_very_long_and_secure_jwt_refresh_secret_at_least_32_characters

# CORS Configuration (comma-separated list of allowed origins)
ALLOWED_ORIGINS=http://localhost:3000,https://code-talk-k8s.el-jefe.me

# Client GraphQL Endpoints
REACT_APP_GRAPHQL_HTTP_URI=http://localhost/graphql
REACT_APP_GRAPHQL_WS_URI=ws://localhost/graphql

# Optional: Version tag for Docker images
VERSION=latest
