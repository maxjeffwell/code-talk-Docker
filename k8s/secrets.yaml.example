# Kubernetes Secrets for code-talk
#
# IMPORTANT:
# 1. Copy this file to secrets.yaml
# 2. Replace all placeholder values with your actual values
# 3. NEVER commit secrets.yaml to version control
#
# To encode a value (if using data instead of stringData):
#   echo -n "your-value-here" | base64

apiVersion: v1
kind: Secret
metadata:
  name: code-talk-secret
  namespace: default
type: Opaque
stringData:
  # PostgreSQL connection string
  # Format: postgres://user:password@host:port/database?sslmode=disable
  database-url: "postgres://codetalk_user:codetalk_postgres123@postgresql-codetalk:5432/codetalk?sslmode=disable"

  # JWT signing secret (use a strong random string)
  # Generate with: openssl rand -base64 32
  jwt-secret: "your-jwt-secret-change-me"

  # Redis connection string
  # Format: redis://default:password@host:port
  redis-url: "redis://default:redis123@redis:6379"

---
# Instructions:
#
# 1. Copy this file:
#    cp k8s/secrets.yaml.example k8s/secrets.yaml
#
# 2. Edit secrets.yaml with your actual values
#
# 3. Apply to cluster:
#    kubectl apply -f k8s/secrets.yaml
#
# 4. Verify:
#    kubectl get secret code-talk-secret -o yaml
